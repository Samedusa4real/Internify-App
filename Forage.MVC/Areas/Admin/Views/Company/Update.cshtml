@model CompanyUpdateDto

<div class="container" style="margin: 16px 0;">
	<form method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="Name">Name:</label>
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ActualAddress">Actual Address:</label>
			<input class="form-control" asp-for="ActualAddress" />
			<span asp-validation-for="ActualAddress" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="LegalAddress">Legal Address:</label>
			<input class="form-control" asp-for="LegalAddress" />
			<span asp-validation-for="LegalAddress" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PhoneNumber">Phone Number:</label>
			<input class="form-control" asp-for="PhoneNumber" />
			<span asp-validation-for="PhoneNumber" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="ContactPersonName">Contact Person Name:</label>
			<input class="form-control" asp-for="ContactPersonName" />
			<span asp-validation-for="ContactPersonName" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="AppUserId">User:</label>
			<input class="form-control" asp-for="AppUserId" />
			<span asp-validation-for="AppUserId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CompanyIndustryFieldId">Field:</label>
			<select asp-for="CompanyIndustryFieldId" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.CompanyIndustryFields)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="CompanyIndustryFieldId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.file">Logo:</label>
			<input type="file" class="form-control" asp-for="@Model.file" />
			<span asp-validation-for="file" class="text text-danger"></span>
		</div>
		@Html.AntiForgeryToken()
		<button type="submit" style="width: 180px; margin-top: 16px;" class="btn btn-success btn-rounded">Update</button>
	</form>
</div>