@model IEnumerable<Course>
<div class="card-body">
    <table class="table">
        <thead>
            <tr class="text-nowrap">
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Company Name</th>
                <th>Level</th>
                <th>Created Time</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td><img src="~/Images/Courses/@item.AboutImage" width="100px" style="object-fit: contain;" height="100px"></td>
                    <td>@item.Name</td>
                    <td>@item.Company.Name</td>
                    <td>@item.CourseLevel.Name</td>
                    <td>@item.CreatedAt.ToShortDateString()</td>

                    <td><a asp-controller="course" asp-action="update" asp-route-id="@item.Id" class="fa-solid fa-pen-to-square"></a></td>
                    <td>
                        <a onclick="if(!confirm('Are you sure?')){return false;}"
                           asp-controller="course" asp-action="remove" asp-route-id="@item.Id" class="fa-solid fa-trash-can" style="color: red"></a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
    <a asp-area="admin" asp-controller="course" asp-action="create"><button type="button" class="btn btn-primary btn-lg btn-block"> Create Course </button></a>

</div>
