@model CourseLessonUpdateDto

<div class="container">
	<form method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="Name">Name:</label>
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description">Description:</label>
			<textarea class="form-control" asp-for="Description"></textarea>
			<span asp-validation-for="Description" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CourseId">Course</label>
			<select asp-for="CourseId" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Courses)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="CourseId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="CourseLessonLevelId">Level</label>
			<select asp-for="CourseLessonLevelId" class="form-select" aria-label="Default select example">
				@foreach (var item in ViewBag.Levels)
				{
					<option value="@item.Id">@item.Name</option>
				}
			</select>
			<span asp-validation-for="CourseLessonLevelId" class="text text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="@Model.lessonVideo">Video:</label>
			<input type="file" class="form-control" asp-for="@Model.lessonVideo" />
			<span asp-validation-for="lessonVideo" class="text text-danger"></span>
		</div>
		@Html.AntiForgeryToken()
		<button type="submit">Create</button>
	</form>
</div>