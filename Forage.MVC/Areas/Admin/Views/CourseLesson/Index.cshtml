@model IEnumerable<CourseLesson>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name:</th>
                <th scope="col">Lesson Duration:</th>
                <th scope="col">Lesson Line:</th>
                <th scope="col">Course Name:</th>
                <th scope="col">Level:</th>
                <th scope="col">Video:</th>
                <th scope="col">Update</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <th>@item.Name</th>
                    <th>@item.CourseDuration</th>
                    <th>@item.LessonLine</th>
                    <th>@item.Course.Name</th>
                    <th>@item.CourseLessonLevel.Name</th>
                    <th>
                        <iframe width="300"
                                height="200"
                                src="~/Videos/CourseLessons/@item.Video"
                                frameborder="0"
                                allowfullscreen></iframe>
                    </th>
                    <td>
                        <a asp-controller="CourseLesson" asp-action="update" asp-route-id="@item.Id">
                            <i class="fas fa-edit text text-primary"></i>
                        </a>
                    </td>
                    <td>
                        <a onclick="if(!confirm('Are you sure?')){return false;}"
                           asp-controller="CourseLesson" asp-action="remove" asp-route-id="@item.Id"
                           class=" delete-item"><i class="fas fa-trash text text-danger"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="CourseLesson" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a>
            <div style="width:100%; " class="btn btn-outline-success">Create Lesson </div>
        </a>
    </div>
</div>
